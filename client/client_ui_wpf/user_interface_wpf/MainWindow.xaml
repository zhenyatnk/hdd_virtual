<Window x:Class="client_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Информация о дисках и разделах VM" Height="350" Width="525">
    <Grid>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="24"/>
    		<RowDefinition Height="229*"/>
    		<RowDefinition Height="66*"/>
    	</Grid.RowDefinitions>
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="412*"/>
    		<ColumnDefinition Width="105*"/>
    	</Grid.ColumnDefinitions>
    	<ListView Margin="0,0,0,0" Grid.Row="1">
    		<ListView.View>
    			<GridView>
    				<GridViewColumn Header="Название"/>
    				<GridViewColumn Header="Загрузочный"/>
    				<GridViewColumn Header="Размер (ГБ)"/>
    				<GridViewColumn Header="Файловая система"/>
    			</GridView>
    		</ListView.View>
    	</ListView>
    	<ListBox Margin="0,0,0,0" Grid.Row="2"/>
    	<Menu Margin="0,0,0,0" Grid.Row="0" Grid.ColumnSpan="2">
    		<MenuItem Header="Настройки">
                <MenuItem Header="Параметры соединения" Click="MenuItem_Click">
				</MenuItem>
			</MenuItem>
    	</Menu>
    </Grid>
</Window>
